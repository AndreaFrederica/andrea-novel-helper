{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "WordCount Ignore",
    "scopeName": "source.wcignore",
    "patterns": [
        {
            "include": "#comment"
        },
        {
            "include": "#pattern"
        }
    ],
    "repository": {
        "comment": {
            "patterns": [
                {
                    "name": "comment.line.number-sign.wcignore",
                    "match": "^\\s*#.*$"
                },
                {
                    "name": "comment.line.number-sign.inline.wcignore",
                    "match": "(?<!\\\\)#.*$"
                }
            ]
        },
        "pattern": {
            "patterns": [
                {
                    "name": "string.quoted.double.wcignore",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.wcignore",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.wcignore",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
                            "name": "constant.character.escape.wcignore",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "keyword.operator.glob.wcignore",
                    "match": "[*?\\[\\]]"
                },
                {
                    "name": "constant.character.escape.wcignore",
                    "match": "\\\\."
                },
                {
                    "name": "keyword.operator.negation.wcignore",
                    "match": "^!"
                },
                {
                    "name": "keyword.operator.directory.wcignore",
                    "match": "/$"
                },
                {
                    "name": "string.unquoted.wcignore",
                    "match": "^(?:\\s*!?)?(?:\\\\#|[^#\"'\\r\\n])+"
                }
            ]
        }
    }
}

{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension (TypeScript)",
      "type": "extensionHost",
      "request": "launch",
      "trace": true,
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ],
      "port": 9229,
      "preLaunchTask": "npm: watch"
    },
    {
      "name": "Run Extension (Webpack)",
      "type": "extensionHost",
      "request": "launch",
      "trace": true,
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "port": 9229,
      "preLaunchTask": "npm: webpack:watch"
    },
    {
      "name": "Extension Tests (TypeScript)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/test/suite/index"
      ],
      "outFiles": [
        "${workspaceFolder}/out/test/**/*.js"
      ],
      "preLaunchTask": "npm: watch"
    },
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "args": [],
      "stopAtEntry": false,
      "externalConsole": true,
      "cwd": "d:/Projcets/Novel-Helper/andrea-novel-helper",
      "program": "d:/Projcets/Novel-Helper/andrea-novel-helper/build/Debug/outDebug",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
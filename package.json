{
  "name": "andrea-novel-helper",
  "displayName": "AndreaNovelHelper",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "publisher": "andreafrederica",
    "repository": {
    "type": "git",
    "url": "https://github.com/AndreaFrederica/andrea-novel-helper.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "andrea-novel-helper.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "markdownRoleCompletion.addRoleFromSelection",
        "title": "Create Role from Selection"
      },
      {
        "command": "markdownRoleCompletion.refreshRoles",
        "title": "Refresh Role Library"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection && editorLangId == 'markdown'",
          "command": "markdownRoleCompletion.addRoleFromSelection",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "markdownRoleCompletion.refreshRoles",
          "when": "editorLangId == 'markdown'",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Andrea Novel Helper 配置",
      "properties": {
        "markdownRoleCompletion.rolesFile": {
          "type": "string",
          "default": "character-gallery.json5",
          "description": "角色库 JSON 文件路径（相对于工作区根目录）"
        },
        "markdownRoleCompletion.minChars": {
          "type": "number",
          "default": 1,
          "minimum": 1,
          "description": "触发补全前，前缀最少字符数"
        }
      }
    }
  },

  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },

  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "json5": "^2.2.3"
  }
}
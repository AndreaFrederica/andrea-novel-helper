      },
      {
        "command": "AndreaNovelHelper.createSensitiveWordsMd",
        "title": "创建敏感词表 (.md)"
      },
      {
        "command": "AndreaNovelHelper.createVocabularyMd",
        "title": "创建词汇表 (.md)"
